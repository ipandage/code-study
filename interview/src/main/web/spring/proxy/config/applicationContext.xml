<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:aop="http://www.springframework.org/schema/aop"
        xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

    <!-- 定义通知 -->
    <!-- 前置通知 -->
    <bean id="beforeLogAdvice" class="web.spring.proxy.config.BeforeLogAdvice"/>
    <!-- 后置通知 -->
    <bean id="afterLogAdvice" class="web.spring.proxy.config.AfterLogAdvice"/>

    <!-- spring2.x后 -->
    <!-- 目标对象 -->
    <bean id="userServImpl" class="web.spring.proxy.config.UserServImpl"/>
    <!-- 通知 -->
    <bean id="logAdvice" class="web.spring.proxy.config.LogAdvice"/>

    <aop:config>
        <aop:aspect id="logAspect" ref="logAdvice">
            <!-- 切入点 -->
            <aop:pointcut id="beforePointCut"
                          expression="execution(* saveUser*(..))"/>
            <aop:pointcut id="afterPointCut"
                          expression="execution(* saveUser*(..))"/>

            <!-- 织入(通知作用于切入点) -->
            <aop:before method="beforeLog" pointcut-ref="beforePointCut"/>
        </aop:aspect>
    </aop:config>
</beans>